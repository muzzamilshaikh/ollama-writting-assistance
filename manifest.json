{
  "manifest_version": 3,
  "name": "Ollama Grammar Corrector",
  "version": "1.0",
  "description": "Corrects grammar and spelling using a local Ollama model.",
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:11434/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.jpeg"
    }
  },
  "icons": {
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}